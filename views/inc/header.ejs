<div class="navbar navbar-expand-lg fixed-top">
    <div class="container-fluid">
        <a href="/" class="navbar-brand">
            <img src="/img/logo.png" alt="VidFriendz" width="100" height="40">
        </a>
        <% if(logUser.username) { %>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item mr-3">
                    <a href="/search" class="nav-link">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </a>
                </li>
                <li class="nav-item mr-3">
                    <% if(hasNotes.length >= 1) { %>
                        <a href="/users/notes" class="nav-link" title="You Have Notifications">
                            <i class="fa-solid fa-bell"></i>
                        </a>
                    <% } else { %>
                        <a href="/users/notes" class="nav-link" title="No Notifications">
                            <i class="fa-regular fa-bell"></i>
                        </a>
                    <% } %>
                </li>
                <li class="nav-item mr-3">
                    <a href="#" class="nav-link" id="uploadDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa-solid fa-upload"></i></a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="uploadDropdown">
                        <a href="/videos/upload" class="dropdown-item"><i class="fa-solid fa-video mr-2"></i> Upload Video</a>
                        <a href="/photos/upload" class="dropdown-item"><i class="fa-solid fa-image mr-2"></i> Upload Photo</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link" id="acctDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa-solid fa-circle-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acctDropdown">
                        <a href="/users/explore" class="dropdown-item">Explore</a>
                        <a href="/users/logout" class="dropdown-item">Logout</a>
                    </div>
                </li>
            </ul>
        <% } else { %>
            <form method="POST" class="ml-auto form-inline" action="/users/login">
                <div class="row">
                    <div class="col">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="col pl-0">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="col pl-0">
                        <button type="submit" class="btn btn-outline-light btn-md">Log In</button>
                    </div>
                </div>
            </form>
        <% } %>
    </div>
</div>