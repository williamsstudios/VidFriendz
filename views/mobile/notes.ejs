<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%- title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/mobile.css">
    <script src="https://kit.fontawesome.com/81f3202402.js" crossorigin="anonymous"></script>
</head>
<body>
<%- include("./inc/header.ejs") %>
<div class="container-fluid" style="margin-top: 56px;">
    <div class="row">
        <div class="col-lg-12">
            <%- include("./inc/messages.ejs") %>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card mt-4 bg-dark text-light" style="border-radius: 0px;">
                <div class="card-body">
                    <h4 class="card-title">Notifications</h4>
                    <hr />
                    <% for(var n = 0; n<mynotes.length; n++) { %>
                        <div class="row pt-2 pb-3 border-bottom">
                            <div class="col-1">
                                <a href="/users/<%- mynotes[n].initator %>">
                                    <% if(mynotes[n].mynotes.avatar) { %>
                                        <img src="/uploads/<%- mynotes[n].initator %>/<%- mynotes[n].mynotes.avatar %>" alt="<%- mynotes[n].initator %>" width="50" height="50" class="rounded-circle">
                                    <% } else { %>
                                        <img src="/img/no_pic.jpg" alt="<%- mynotes[n].initator %>" width="50" height="50" class="rounded-circle">
                                    <% } %>
                                </a>
                            </div>
                            <div class="col-11">
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <p class="m-0 p-0">
                                            <a href="/users/<%- mynotes[n].initator %>" class="text-light"><%- mynotes[n].mynotes.firstname %> <%- mynotes[n].mynotes.lastname %></a> <%- mynotes[n].note %>
                                        </p>
                                    </div>
                                </div>
                               <div class="row">
                                    <div class="col-3 pr-0">
                                        <form method="Post" action="/users/notes/markasread/<%- mynotes[n]._id %>">
                                            <button type="submit" class="btn btn-success btn-sm">Mark As Read</button>
                                        </form>
                                    </div>
                                    <div class="col-2 pl-0">
                                        <form method="Post" action="/users/notes/delete/<%- mynotes[n]._id %>">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                               </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>